<header class="navbar">
    <nav>
      <ul class="nav">
        <li class="first-layer"><%= link_to "homepage", root_path, id: "logo" %></li>
        <li class="first-layer"><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li class="first-layer"><%= link_to "Users", users_path %></li>
          <li class="first-layer"><%= link_to "Profile", current_user %></li>
          <li class="first-layer"><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li class="first-layer"><%= link_to "Log out", logout_path, method: "delete" %></li>
        <% else %>
          <li class="first-layer"><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
</header>