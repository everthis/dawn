<li class="micropost" id="micropost-<%= micropost.id %>">
  <section class="avatar-section">
    <%= link_to avatar_for(micropost.user, size: "small_thumb"), micropost.user, class: "avatar" %>
  </section>
  <section class="content">
    <div class="micropost-info">
      <%= link_to micropost.user.name, micropost.user %>
      <span class="timestamp">
        <%= time_ago_in_words(micropost.created_at) %> ago.
      </span>
      <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete,
                                         data: { confirm: "You sure?" } %>
      <% end %>
    </div>
    <div class="micropost-text"><%= micropost.content %></div>
    <div class="micropost-img"><%= image_tag micropost.picture.url if micropost.picture? %></div>
  </section>
</li>