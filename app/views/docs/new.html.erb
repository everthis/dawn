<% provide(:title, 'New-documentation') %>
<% provide(:name, 'newDocumentation') %>

<% content_for :head do %>
<style name="newDocumentation">
.CodeMirror {
    height: 600px;
}
</style>
<% end %>

<% content_for :content do %>
<div class="document-container">
    <h1>New Doc</h1>
    <%= render 'form' %>
    <%= link_to 'Back', docs_path %>
</div>
<% end %>


<% content_for :foot do %>
	<%= client_javascript_include_tag 'newDocumentation', "newDocumentation" %>
<% end %>
