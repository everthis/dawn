<% provide(:title, @title) %>
<div class="summary">
  <section class="user_info">
    <span class="avatar">
      <%= avatar_for @user %>
    </span>
    <span class="info">
      <div><%= @user.name %></div>
      <div><%= link_to "view my profile", @user %></div>
      <div><b>Microposts:</b> <%= @user.microposts.count %></div>
      <%= render 'shared/stats' %>
    </span>
  </section>
  <section class="stats">
    <% if @users.any? %>
      <div class="user-avatars">
        <% @users.each do |user| %>

          <%= link_to(user, class: "follow-avatar-name") do %>
            <div class="avatar"><%= avatar_for(user, size: "small_thumb") %></div>
            <div class="name"><%= user.name %></div>
          <% end %>

        <% end %>
      </div>
    <% end %>
  </section>
</div>
<div class="">
  <h3 class="center"><%= @title %></h3>
  <% if @users.any? %>
    <ul class="users follow">
      <%= render @users %>
    </ul>
    <%= will_paginate %>
  <% end %>
</div>
