<% provide(:title, 'Gist') %>
<% provide(:name, 'gist') %>

<% content_for :content do %>
  <div class="c-normal-card-box">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Description:</strong>
      <%= @gist.description %>
    </p>

    <p>
      <strong>Extension:</strong>
      <%= @gist.extension %>
    </p>

    <p>
      <strong>Content:</strong>
      <div class="content-container">
        <%= coderay(@gist.content, @gist.extension) %>
      </div>
    </p>

    <p>
      <strong>Hasanswer:</strong>
      <%= @gist.hasAnswer %>
    </p>

    <p>
      <strong>Answer:</strong>
      <%= @gist.answer %>
    </p>

    <p>
      <%= @gist.externalId %>
    </p>

    <%= link_to t('.edit'), edit_gist_path(@gist), class: "fnpu-link" %> |
    <%= link_to t('.back'), gists_path, class: "fnpu-link" %>
  </div>
<% end %>

<% content_for :foot do %>
<% end %>
